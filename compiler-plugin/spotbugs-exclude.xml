<FindBugsFilter>
    <!-- Exclude inner classes from certain checks -->
    <Match>
        <Class name="~.*\$.*"/>
        <Bug pattern="SIC_INNER_SHOULD_BE_STATIC_ANON"/>
    </Match>

    <!-- Exclude visitor pattern related false positives -->
    <Match>
        <Class name="io.ballerina.stdlib.workflow.compiler.ProcessFunctionAnalysisTask$ActivityCallCollector"/>
        <Bug pattern="NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE"/>
    </Match>

    <Match>
        <Class name="io.ballerina.stdlib.workflow.compiler.WorkflowSourceModifier$WorkflowTreeModifier"/>
        <Bug pattern="NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE"/>
    </Match>

    <!-- Exclude EI and EI2 patterns for compiler plugin classes that share state intentionally -->
    <Match>
        <Class name="io.ballerina.stdlib.workflow.compiler.ProcessFunctionAnalysisTask"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>

    <Match>
        <Class name="io.ballerina.stdlib.workflow.compiler.ProcessFunctionInfo"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>

    <Match>
        <Class name="io.ballerina.stdlib.workflow.compiler.WorkflowCodeModifier"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>

    <Match>
        <Class name="io.ballerina.stdlib.workflow.compiler.WorkflowModifierContext"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>

    <Match>
        <Class name="io.ballerina.stdlib.workflow.compiler.WorkflowSourceModifier"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>
</FindBugsFilter>
